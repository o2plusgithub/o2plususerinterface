    function menu_button() {
        $("#web_header").fadeToggle(300);
        $("#base_page_container").fadeToggle(300);
        $("#menu_container").delay(400).fadeToggle(300);
    }

    function menu_back() {
        $("#web_header").delay(400).fadeToggle(300);
        $("#base_page_container").delay(400).fadeToggle(300);
        $("#menu_container").fadeToggle(300);
    }

    function playlist_redirect(subject) {
        window.location.replace(window.location.origin + "/player?lec_num=" + subject)
    }

    function menu_redirect(redirect_id) {
        var base_url = window.location.origin;
        window.location.replace(base_url + "/" + redirect_id);
    }

    window.addEventListener('load', (event) => {
        playlist_render();
    })


    function playlist_render() {
        $.post('/playlist_info', function(data, e) {
            var playlistifo_temp = JSON.parse(data);
            var playlist_length = playlistifo_temp.length;
            var temp = null;
            for (var i = 0; i < playlist_length; i++) {
                temp = temp + "<div id='" + playlistifo_temp[i].lec_num + "' data-role='tile' class='bg-indigo' data-size='wide' onclick='playlist_redirect(" + playlistifo_temp[i].lec_num + ");'> <span class='badge-top'>" + playlistifo_temp[i].lec_num + "</span> <span class='mif-film icon'></span><span class='branding-bar'> <marquee behavior='scroll' direction='left'> Lecture - " + playlistifo_temp[i].lec_num + ' ' + playlistifo_temp[i].lec_name + " </marquee></span></div>";
                if (i == (playlist_length - 1)) {
                    $("#playlistinfojs").append(temp);
                    var m = 0;
                    var interval = setInterval(doStuff, 200); // 2000 ms = start after 2sec 
                    function doStuff() {
                        if (m < playlist_length) {
                            $("#" + (m + 1)).fadeIn(100);
                            m++;
                        } else {
                            clearInterval(interval);
                        }
                    }
                }
            }
        })
    }
